{
  "name": "node-js-mongo-db-boilerplate",
  "version": "1.0.0",
  "description": "Workiz Academy : MongoDB",
  "main": "build/index.js",
  "scripts": {
    "build-image": "COMMIT_SHA=$(git rev-parse --verify HEAD) && docker build --build-arg _env=staging -t gcr.io/decoded-agency-207514/automation-rules-engine:$COMMIT_SHA --no-cache . && docker push gcr.io/decoded-agency-207514/automation-rules-engine:$COMMIT_SHA",
    "deploy-staging": "npm run build-image && ./infra/deploy-staging.sh",
    "postversion": "git push --tags && git push --all",
    "build-server": "tsc -p .",
    "clean": "rm -r build",
    "dev-server": "NODE_ENV=development nodemon -r dotenv/config --watch  'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "dev": "run-p dev-server",
    "build": "run-s build-server",
    "prestart": "run-s clean build",
    "test": "NODE_ENV=development jest --setupFiles dotenv/config",
    "start": "node -r dotenv/config build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Workiz/node-js-mongodb-mongoose-boilerplate"
  },
  "author": "Workiz Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Workiz/node-js-mongodb-mongoose-boilerplate/issues"
  },
  "homepage": "https://github.com/Workiz/node-js-mongodb-mongoose-boilerplate#readme",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)": "<rootDir>/$1"
    }
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "body-parser": "^1.19.0",
    "config": "^3.3.6",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "express-validator": "^6.11.1",
    "fs": "0.0.1-security",
    "json-rules-engine": "^6.1.2",
    "lodash": "^4.17.21",
    "mongoose": "^5.12.9",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "util": "^0.12.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/morgan": "^1.9.2",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
